%head
  %meta{ "charset" => "utf-8" }
  %meta{ "http-equiv" => "X-UA-Compatible", "content" => "IE=edge" }
  %meta{ "name" => "viewport", "content" => "width=device-width, initial-scale=1" }

  // "Website Properties"
  - @title = data[:site][:title]
  - @subtitle = current_resource.data.title || data[:site][:subtitle]
  - @description = current_resource.data.description || data[:site][:description]
  %meta{ name: "description", content: @description }
  %meta{ name: "author", content: data[:site][:author][:name] }
  -# %link{ rel: "icon", href: data[:site][:favicon][:img][:src] }
  %title= "#{@title} | #{@subtitle}"

  // "CSS resources"
  = stylesheet_link_tag "base"

  // Browser styling
  - if data[:site][:browser][:style]
    %meta.browser-styling{ name: "theme-color", content: data[:site][:browser][:style][:address_bar] }
    %meta.browser-styling{ name: "msapplication-navbutton-color", content: data[:site][:browser][:style][:address_bar] }
    %meta{ name: "apple-mobile-web-app-capable", content: "yes" }
    %meta{ name: "apple-mobile-web-app-status-bar-style", content: "black-translucent" }

  // "JQuery"
  = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"

  // "HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries"
  /[if lt IE 9]
    = javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"
    = javascript_include_tag "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"
